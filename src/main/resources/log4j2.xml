<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" strict="true" package="io.vertx.git.users">

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="%highlight{%d %p %C{1}} %m %ex%n"/>
        </Appender>
    </Appenders>

    <Loggers>
        <Logger name="io.vertx.git.users" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="WARN">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>